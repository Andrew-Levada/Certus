<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lpDebugActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LivePapers Debug"
        android:textSize="36dp"
        app:layout_constraintBottom_toTopOf="@+id/student_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/teacher_button_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/teacher_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nothing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/teacher_button_2"
        app:layout_constraintTop_toBottomOf="@+id/student_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/teacher_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="teacher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/teacher_button_1"
        app:layout_constraintEnd_toStartOf="@id/teacher_button_3"
        app:layout_constraintTop_toBottomOf="@+id/student_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/teacher_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/teacher_button_2"
        app:layout_constraintTop_toBottomOf="@+id/student_button" />

</androidx.constraintlayout.widget.ConstraintLayout>