<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:id="@+id/recycler_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@id/recycler_img_container"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/recycler_subject"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:textColor="@color/colorOnSurface"
            android:gravity="center_vertical"
            android:text="SUBJECT" />

        <TextView
            android:id="@+id/recycler_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="16sp"
            android:textColor="@color/colorOnSurfaceHeader"
            android:gravity="bottom"
            android:text="Really long and important text" />

        <TextView
            android:id="@+id/recycler_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/colorOnSurface"
            android:gravity="center_vertical"
            android:text="Less important text"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recycler_img_container"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chat"
            android:tint="@color/colorOnSurface" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>